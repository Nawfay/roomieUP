rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read any user, but only write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Traits collection - users can only read/write their own trait data
    match /traits/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Feeds collection - users can only read/write their own feed
    match /feeds/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Matches collection - users can read/write matches they're part of
    match /matches/{matchId} {
      allow read: if request.auth != null && matchId.matches('.*' + request.auth.uid + '.*');
      allow write: if request.auth != null && matchId.matches('.*' + request.auth.uid + '.*');
    }
    
    // Messages collection - users can read/write messages for matches they're in
    match /messages/{matchId} {
      allow read: if request.auth != null && matchId.matches('.*' + request.auth.uid + '.*');
      allow write: if request.auth != null && matchId.matches('.*' + request.auth.uid + '.*');
      
      // Chats subcollection - same permissions as parent
      match /chats/{messageId} {
        allow read: if request.auth != null && matchId.matches('.*' + request.auth.uid + '.*');
        allow create: if request.auth != null && matchId.matches('.*' + request.auth.uid + '.*');
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
